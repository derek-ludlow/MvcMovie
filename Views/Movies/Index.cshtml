@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movie List";
}

<h1>Movie List</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div>
    <form asp-controller="Movies" asp-action="Index" method="get">
        <p>
            Genre: @Html.DropDownList("movieGenre", Model.Genres, "All")
            Title: <input type="text" name="searchString" value="@Model.SearchString" />
            <input type="submit" value="Filter" class="btn btn-primary" />
        </p>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortParm })
            </th>
            <th>
                @Html.ActionLink("Release Date", "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th>Genre</th>
            <th>Price</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
